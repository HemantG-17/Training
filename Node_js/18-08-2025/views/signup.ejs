<%- include('./base/header.ejs')%>
    <div class="container">
        <div class="alert bg-primary text-center my-3" style="color:white">
            <h1>SIGN UP FORM</h1>
        </div>
        <div class="container">
            <div class="row">
                <div class="col"></div>
                <div class="col">
                    <form action="/add/user" method="post">
                        <div>
                         <label class="form-label">FIRST NAME</label>
                         <input type="text" class="form-control" name="firstName"></input>
                         </div>
                         <div>
                            <label class="form-label">LAST NAME</label>
                            <input type="text" class="form-control"name="lastName"></input>

                        </div>
                        <div>
                            <label class="form-label"> EMAIL</label>
                            <input type="text" class="form-control" name="email"></input>

                        </div>
                        <div>
                            <label class="form-label"> PASSWORD</label>
                            <input type="password" class="form-control" name="password"></input>

                        </div>

                        <input type="submit" value="sign up" class="btn btn-warning w-100 my-3"></input>
                        <div>
                            <a href="/user/login" class="btn btn-danger w-100 my-3">Login</a>
                        </div>
                    </form>
                </div>
                <div class="col"></div>
            </div>
        </div>

    </div>
