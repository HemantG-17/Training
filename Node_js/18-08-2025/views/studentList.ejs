<%- include('./base/header.ejs') %>
    <%- include('./base/nav.ejs') %>

        <div class="container">
            <div class="alert text-align bg-primary my-3" style="color:aliceblue">
                <h5>Student List</h5>
            </div>
        </div>

        <div class="container">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Roll No</th>
                        <th>Name</th>
                        <th>Father Name</th>
                        <th>Course</th>
                        <th>Branch</th>
                        <th>Year of Admission</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach((student, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= student.rollNo %>
                            </td>
                            <td>
                                <%= student.name %>
                            </td>
                            <td>
                                <%= student.fatherName %>
                            </td>
                            <td>
                                <%= student.course %>
                            </td>
                            <td>
                                <%= student.branch %>
                            </td>
                            <td>
                                <%= student.yearOfAdm %>
                            </td>
                            <td>
                                <a class="btn btn-warning" href="/edit/student/page/<%=student._id%">Edit </a>
                                <a class="btn btn-danger" href="/delete/student/<%=student._id%>""> Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <%- include('./base/footer.ejs') %>