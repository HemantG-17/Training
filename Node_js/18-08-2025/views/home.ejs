<%- include('./base/header.ejs') %>
      <%- include('./base/nav.ejs') %>

  <style>
    body {
      background: linear-gradient(135deg, #dbeafe, #e0e7ff);
      /* soft light blue gradient */
    }

    .login-card {
      background-color: #f9f5ff;
      /* soft lavender */
      border-radius: 20px;
      /* rounded edges */
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .login-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .btn-custom-login {
      background-color: #6366f1;
      /* indigo */
      color: white;
      border-radius: 12px;
      transition: all 0.3s ease;
    }

    .btn-custom-login:hover {
      background-color: #4f46e5;
      transform: scale(1.05);
    }

    .btn-custom-signup {
      background-color: #10b981;
      /* teal/green */
      color: white;
      border-radius: 12px;
      transition: all 0.3s ease;
    }

    .btn-custom-signup:hover {
      background-color: #059669;
      transform: scale(1.05);
    }

    .card-title {
      font-weight: 700;
      color: #374151;
    }

    .form-control {
      border-radius: 12px;
    }

    .signup-card {
      background: url('/rd.jpeg') no-repeat center center/cover;
      opacity: 0.7;
    }
  </style>

  <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card login-card shadow-lg overflow-hidden" style="width: 900px; max-width: 100%;">
      <div class="row g-0">

        <!-- Left Side: Login Form -->
        <div class="col-md-6 d-flex align-items-center">
          <div class="p-5 w-100">
            <h2 class="card-title text-center mb-4">Admin Login</h2>

            <form action="/login" method="post">
              <!-- Email -->
              <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input type="email" class="form-control" name="email" placeholder="Enter your email" required>
              </div>

              <!-- Password -->
              <div class="mb-3">
                <label class="form-label fw-bold">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter your password" required>
              </div>

              <!-- Login Button -->
              <button type="submit" class="btn btn-custom-login w-100 fw-bold">Login</button>
            </form>
          </div>
        </div>


        <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center p-5 signup-card"
          style="background-color: #eef2ff;">
          <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center p-5"
            style="background-color: #eef2ff;">
            <h3 class="fw-bold mb-3 text-dark">New Here?</h3>
            <p class="text-muted mb-4">Create an account to access more features.</p>
            <a href="/user/signup" class="btn btn-custom-signup fw-bold px-4 py-2">Sign Up</a>
          </div>

        </div>
      </div>
    </div>

    <%- include('./base/footer.ejs') %>